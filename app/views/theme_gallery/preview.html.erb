<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/50" data-controller="modal" data-action="click->modal#closeBackground keydown.esc@window->modal#close">
    <div class="bg-white dark:bg-gray-800 rounded-[20px] shadow-xl max-w-2xl w-full max-h-[90vh] overflow-hidden" data-modal-target="container">
      <%# Header %>
      <div class="flex items-center justify-between p-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Preview: <%= @theme.name %></h2>
        <%= link_to theme_gallery_index_path, class: "p-2 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-full transition", data: { turbo_frame: "modal" } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>

      <%# Preview Content with theme colors applied %>
      <div class="p-6 overflow-y-auto" style="<%= @theme.to_css_variables %>">
        <%# Mini Dashboard Preview %>
        <div class="rounded-[15px] overflow-hidden border" style="border-color: var(--color-border); background-color: var(--color-background);">
          <%# Header bar %>
          <div class="px-4 py-3 flex items-center justify-between" style="background-color: var(--color-primary);">
            <span class="font-semibold text-white">Family Hub</span>
            <div class="flex gap-2">
              <div class="w-8 h-8 rounded-full bg-white/20"></div>
            </div>
          </div>

          <%# Content area %>
          <div class="p-4 space-y-4">
            <%# Cards row %>
            <div class="grid grid-cols-3 gap-3">
              <div class="p-3 rounded-[10px]" style="background-color: var(--color-surface);">
                <div class="text-xs mb-1" style="color: var(--color-text); opacity: 0.6;">Events</div>
                <div class="text-xl font-bold" style="color: var(--color-primary);">12</div>
              </div>
              <div class="p-3 rounded-[10px]" style="background-color: var(--color-surface);">
                <div class="text-xs mb-1" style="color: var(--color-text); opacity: 0.6;">Messages</div>
                <div class="text-xl font-bold" style="color: var(--color-secondary);">5</div>
              </div>
              <div class="p-3 rounded-[10px]" style="background-color: var(--color-surface);">
                <div class="text-xs mb-1" style="color: var(--color-text); opacity: 0.6;">Photos</div>
                <div class="text-xl font-bold" style="color: var(--color-accent);">48</div>
              </div>
            </div>

            <%# Sample list items %>
            <div class="space-y-2">
              <div class="p-3 rounded-[10px] flex items-center gap-3" style="background-color: var(--color-surface);">
                <div class="w-10 h-10 rounded-full flex items-center justify-center text-white text-sm font-medium" style="background-color: var(--color-primary);">JD</div>
                <div class="flex-1">
                  <div class="font-medium" style="color: var(--color-text);">John Doe</div>
                  <div class="text-sm" style="color: var(--color-text); opacity: 0.6;">Family member</div>
                </div>
                <div class="px-2 py-1 rounded text-xs text-white" style="background-color: var(--color-success);">Online</div>
              </div>

              <div class="p-3 rounded-[10px] flex items-center gap-3" style="background-color: var(--color-surface);">
                <div class="w-10 h-10 rounded-full flex items-center justify-center text-white text-sm font-medium" style="background-color: var(--color-secondary);">JS</div>
                <div class="flex-1">
                  <div class="font-medium" style="color: var(--color-text);">Jane Smith</div>
                  <div class="text-sm" style="color: var(--color-text); opacity: 0.6;">Family member</div>
                </div>
              </div>
            </div>

            <%# Buttons preview %>
            <div class="flex gap-2 pt-2">
              <button class="px-4 py-2 rounded-[10px] text-white text-sm font-medium" style="background-color: var(--color-primary);">Primary</button>
              <button class="px-4 py-2 rounded-[10px] text-white text-sm font-medium" style="background-color: var(--color-secondary);">Secondary</button>
              <button class="px-4 py-2 rounded-[10px] text-white text-sm font-medium" style="background-color: var(--color-accent);">Accent</button>
            </div>

            <%# Status colors %>
            <div class="flex gap-2 text-xs">
              <span class="px-2 py-1 rounded text-white" style="background-color: var(--color-success);">Success</span>
              <span class="px-2 py-1 rounded text-white" style="background-color: var(--color-warning);">Warning</span>
              <span class="px-2 py-1 rounded text-white" style="background-color: var(--color-error);">Error</span>
              <span class="px-2 py-1 rounded text-white" style="background-color: var(--color-info);">Info</span>
            </div>
          </div>
        </div>

        <%# Color swatches %>
        <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
          <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Color Palette</h3>
          <div class="grid grid-cols-6 gap-2">
            <% %w[primary secondary accent background surface text success warning error info border].each do |color| %>
              <div class="text-center">
                <div class="w-full aspect-square rounded-lg border border-gray-200 dark:border-gray-600 mb-1" style="background-color: <%= @theme.colors[color] %>"></div>
                <span class="text-xs text-gray-500 dark:text-gray-400 capitalize"><%= color %></span>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <%# Footer %>
      <div class="flex gap-3 p-4 border-t border-gray-200 dark:border-gray-700">
        <%= link_to theme_gallery_index_path, class: "btn btn-secondary flex-1 justify-center", data: { turbo_frame: "modal" } do %>
          Close
        <% end %>
        <%= button_to select_theme_gallery_path(@theme), method: :post, class: "btn btn-primary flex-1 justify-center" do %>
          Apply This Theme
        <% end %>
      </div>
    </div>
  </div>
<% end %>
