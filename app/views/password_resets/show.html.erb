<% content_for(:title) { "Password Reset - Family Hub" } %>

<div class="min-h-screen flex items-center justify-center px-4 py-12 bg-theme-background">
  <div class="w-full max-w-md">
    <%# Success header %>
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-100 dark:bg-green-900/30 mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-theme-text">Password Reset Complete</h1>
      <p class="mt-2 text-theme-secondary">
        Your password has been reset. Use the temporary password below to log in.
      </p>
    </div>

    <%# Temporary password card %>
    <div class="card p-6 mb-6">
      <h2 class="text-lg font-semibold text-theme-text mb-4">Your Temporary Password</h2>

      <%# Password field with visibility toggle and copy button %>
      <div data-controller="password-visibility">
        <div class="relative">
          <input type="password"
                 value="<%= @temporary_password %>"
                 readonly
                 class="input pr-20 bg-theme-background font-mono"
                 data-password-visibility-target="input">

          <div class="absolute inset-y-0 right-0 flex items-center">
            <%# Copy button %>
            <button type="button"
                    data-action="click->password-visibility#copy"
                    class="p-2 text-theme-secondary hover:text-theme-text transition-colors"
                    title="Copy to clipboard">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
            </button>

            <%# Visibility toggle button %>
            <button type="button"
                    data-action="click->password-visibility#toggle"
                    class="p-2 text-theme-secondary hover:text-theme-text transition-colors"
                    title="Toggle password visibility">
              <svg xmlns="http://www.w3.org/2000/svg"
                   class="h-5 w-5"
                   fill="none"
                   viewBox="0 0 24 24"
                   stroke="currentColor"
                   data-password-visibility-target="showIcon">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              <svg xmlns="http://www.w3.org/2000/svg"
                   class="h-5 w-5 hidden"
                   fill="none"
                   viewBox="0 0 24 24"
                   stroke="currentColor"
                   data-password-visibility-target="hideIcon">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
              </svg>
            </button>
          </div>
        </div>
        <p class="text-xs text-theme-secondary mt-2">
          You will be required to change this password when you log in.
        </p>
      </div>
    </div>

    <%# Info box %>
    <div class="card p-6 mb-6 bg-blue-50 dark:bg-blue-900/20 border-blue-200 dark:border-blue-800">
      <h3 class="font-semibold text-theme-text mb-2">What happens next?</h3>
      <ul class="text-sm text-theme-secondary space-y-1 list-disc list-inside">
        <li>Your old password no longer works</li>
        <li>Log in with this temporary password</li>
        <li>You'll be prompted to create a new password</li>
      </ul>
    </div>

    <%# Login button %>
    <%= link_to login_path, class: "btn btn-primary w-full justify-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
      </svg>
      Go to Login
    <% end %>
  </div>
</div>
