<% content_for(:title) { "Forgot Password - Family Hub" } %>

<div class="min-h-screen flex items-center justify-center px-4 py-12 bg-theme-background">
  <div class="w-full max-w-md">
    <%# Header %>
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-card bg-theme-primary-light mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-theme-primary" viewBox="0 0 24 24" fill="currentColor">
          <path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 00-5.25 5.25v3a3 3 0 00-3 3v6.75a3 3 0 003 3h10.5a3 3 0 003-3v-6.75a3 3 0 00-3-3v-3c0-2.9-2.35-5.25-5.25-5.25zm3.75 8.25v-3a3.75 3.75 0 10-7.5 0v3h7.5z" clip-rule="evenodd" />
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-theme-text">Forgot Your Password?</h1>
      <p class="mt-2 text-theme-secondary">Enter your email address and we'll help you reset it.</p>
    </div>

    <%# Reset form card %>
    <div class="card p-8">
      <%= form_with url: password_resets_path, method: :post, local: true, class: "space-y-6" do |f| %>
        <%# Email field %>
        <div>
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email,
              class: "input",
              placeholder: "you@example.com",
              autocomplete: "email",
              autofocus: true,
              required: true,
              value: @email %>
        </div>

        <%# Submit button %>
        <div>
          <%= f.submit "Reset Password", class: "btn btn-primary w-full" %>
        </div>
      <% end %>
    </div>

    <%# Back to login link %>
    <div class="mt-6 text-center">
      <%= link_to "â† Back to Login", login_path, class: "text-theme-secondary hover:text-theme-text text-sm" %>
    </div>
  </div>
</div>
