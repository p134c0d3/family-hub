<% content_for(:title) { "Change Password - Family Hub" } %>

<div class="min-h-screen flex items-center justify-center px-4 py-12 bg-theme-background">
  <div class="w-full max-w-md">
    <%# Header %>
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-card bg-theme-primary-light mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-theme-primary" viewBox="0 0 24 24" fill="currentColor">
          <path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 00-5.25 5.25v3a3 3 0 00-3 3v6.75a3 3 0 003 3h10.5a3 3 0 003-3v-6.75a3 3 0 00-3-3v-3c0-2.9-2.35-5.25-5.25-5.25zm3.75 8.25v-3a3.75 3.75 0 10-7.5 0v3h7.5z" clip-rule="evenodd" />
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-theme-text">Change Your Password</h1>
      <% unless current_user.password_changed? %>
        <p class="mt-2 text-theme-secondary">You must set a new password to continue.</p>
      <% else %>
        <p class="mt-2 text-theme-secondary">Enter a new secure password.</p>
      <% end %>
    </div>

    <%# Password change form %>
    <div class="card p-8">
      <%= form_with url: change_password_path, method: :patch, local: true, class: "space-y-6" do |f| %>
        <%# Current password %>
        <div data-controller="password-visibility">
          <%= f.label :current_password, class: "label" %>
          <div class="relative">
            <%= f.password_field :current_password,
                class: "input pr-10",
                placeholder: "Enter your current password",
                autocomplete: "current-password",
                required: true,
                data: { password_visibility_target: "input" } %>

            <div class="absolute inset-y-0 right-0 flex items-center">
              <button type="button"
                      data-action="click->password-visibility#toggle"
                      class="p-2 text-theme-secondary hover:text-theme-text transition-colors"
                      title="Toggle password visibility">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" data-password-visibility-target="showIcon">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" data-password-visibility-target="hideIcon">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                </svg>
              </button>
            </div>
          </div>
          <% unless current_user.password_changed? %>
            <p class="text-xs text-theme-secondary mt-1">Enter the temporary password you received.</p>
          <% end %>
        </div>

        <%# New password with strength meter %>
        <div data-controller="password-visibility password-strength"
             data-password-strength-user-inputs-value="<%= [current_user.email, current_user.first_name, current_user.last_name].to_json %>">
          <%= f.label :password, "New Password", class: "label" %>
          <div class="relative">
            <%= f.password_field :password,
                class: "input pr-10",
                placeholder: "Enter your new password",
                autocomplete: "new-password",
                minlength: 8,
                required: true,
                data: {
                  password_visibility_target: "input",
                  password_strength_target: "input",
                  action: "input->password-strength#evaluate"
                } %>

            <div class="absolute inset-y-0 right-0 flex items-center">
              <button type="button"
                      data-action="click->password-visibility#toggle"
                      class="p-2 text-theme-secondary hover:text-theme-text transition-colors"
                      title="Toggle password visibility">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" data-password-visibility-target="showIcon">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" data-password-visibility-target="hideIcon">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                </svg>
              </button>
            </div>
          </div>
          <%# Strength meter %>
          <div data-password-strength-target="meter"></div>
          <%# Feedback suggestions %>
          <div data-password-strength-target="feedback" class="hidden"></div>
          <p class="text-xs text-theme-secondary mt-1">Must be at least 8 characters.</p>
        </div>

        <%# Confirm password %>
        <div data-controller="password-visibility">
          <%= f.label :password_confirmation, "Confirm New Password", class: "label" %>
          <div class="relative">
            <%= f.password_field :password_confirmation,
                class: "input pr-10",
                placeholder: "Confirm your new password",
                autocomplete: "new-password",
                minlength: 8,
                required: true,
                data: { password_visibility_target: "input" } %>

            <div class="absolute inset-y-0 right-0 flex items-center">
              <button type="button"
                      data-action="click->password-visibility#toggle"
                      class="p-2 text-theme-secondary hover:text-theme-text transition-colors"
                      title="Toggle password visibility">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" data-password-visibility-target="showIcon">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" data-password-visibility-target="hideIcon">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                </svg>
              </button>
            </div>
          </div>
        </div>

        <%# Submit %>
        <div>
          <%= f.submit "Change Password", class: "btn btn-primary w-full" %>
        </div>
      <% end %>
    </div>

    <%# Back link (only if password already changed) %>
    <% if current_user.password_changed? %>
      <div class="mt-6 text-center">
        <%= link_to "â† Back to Settings", settings_path, class: "text-theme-secondary hover:text-theme-text text-sm" %>
      </div>
    <% end %>
  </div>
</div>
