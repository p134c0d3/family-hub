<%# Event detail view with RSVP section %>
<div class="container mx-auto px-4 py-6 max-w-3xl">
  <div class="card p-6">
    <!-- Header -->
    <div class="flex items-start justify-between mb-6">
      <div class="flex-1">
        <div class="flex items-center gap-2 mb-2">
          <div class="w-4 h-4 rounded-full" style="background-color: <%= @event.color %>"></div>
          <h1 class="text-2xl font-bold text-theme-text"><%= @event.title %></h1>
        </div>

        <div class="flex items-center gap-4 text-sm text-theme-secondary">
          <div class="flex items-center gap-1">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <%= @event.start_at.strftime("%B %d, %Y") %>
          </div>

          <% unless @event.all_day %>
            <div class="flex items-center gap-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <%= @event.start_at.strftime("%l:%M %p") %>
              <% if @event.end_at %>
                - <%= @event.end_at.strftime("%l:%M %p") %>
              <% end %>
            </div>
          <% else %>
            <span class="inline-flex items-center gap-1 px-2 py-0.5 bg-theme-surface rounded-[15px] text-xs">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              All day
            </span>
          <% end %>

          <% if @event.recurring? %>
            <span class="inline-flex items-center gap-1 px-2 py-0.5 bg-theme-surface rounded-[15px] text-xs">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
              Recurring
            </span>
          <% end %>
        </div>
      </div>

      <% if @event.created_by == current_user %>
        <div class="flex gap-2">
          <%= link_to edit_event_path(@event), class: "btn btn-secondary btn-sm", data: { turbo_frame: "modal" } do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit
          <% end %>
          <%= button_to event_path(@event), method: :delete, data: { turbo_confirm: "Delete this event?" }, class: "btn btn-secondary btn-sm text-red-500 hover:bg-red-500/10" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Delete
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Description -->
    <% if @event.description.present? %>
      <div class="mb-6">
        <h2 class="text-sm font-semibold text-theme-text mb-2">Description</h2>
        <p class="text-theme-text whitespace-pre-wrap"><%= @event.description %></p>
      </div>
    <% end %>

    <!-- Creator -->
    <div class="mb-6">
      <h2 class="text-sm font-semibold text-theme-text mb-2">Created by</h2>
      <div class="flex items-center gap-2">
        <% if @event.created_by.avatar.attached? %>
          <%= image_tag @event.created_by.avatar, class: "w-8 h-8 rounded-full object-cover" %>
        <% else %>
          <div class="w-8 h-8 rounded-full bg-theme-primary/20 flex items-center justify-center">
            <span class="text-theme-primary text-xs font-medium"><%= @event.created_by.initials %></span>
          </div>
        <% end %>
        <span class="text-sm text-theme-text"><%= @event.created_by.first_name %> <%= @event.created_by.last_name %></span>
      </div>
    </div>

    <!-- RSVP Section -->
    <div class="border-t border-theme-border pt-6">
      <h2 class="text-lg font-semibold text-theme-text mb-4">RSVP</h2>

      <!-- RSVP Buttons -->
      <div class="flex gap-2 mb-6" data-controller="rsvp" data-rsvp-event-id-value="<%= @event.id %>">
        <% current_rsvp = @event.event_rsvps.find_by(user: current_user) %>
        <% EventRsvp::STATUSES.each do |status| %>
          <%= button_to event_rsvps_path(@event, status: status),
              method: :post,
              class: "btn flex-1 #{current_rsvp&.status == status ? 'btn-primary' : 'btn-secondary'}",
              data: { rsvp_target: "button", status: status } do %>
            <%= status.titleize %>
          <% end %>
        <% end %>
      </div>

      <!-- RSVP List -->
      <div id="event_<%= @event.id %>_rsvps">
        <%= render 'events/rsvp_list', event: @event %>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to "Back to Calendar", calendar_path, class: "btn btn-secondary" %>
  </div>
</div>
