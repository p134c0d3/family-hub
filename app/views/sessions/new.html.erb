<% content_for(:title) { "Login - Family Hub" } %>

<div class="min-h-screen flex items-center justify-center px-4 py-12 bg-theme-background">
  <div class="w-full max-w-md">
    <%# Logo and title %>
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-card bg-theme-primary-light mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-theme-primary" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12.75 3.03v.568c0 .334.148.65.405.864l1.068.89c.442.369.535 1.01.216 1.49l-.51.766a2.25 2.25 0 01-1.161.886l-.143.048a1.107 1.107 0 00-.57 1.664c.369.555.169 1.307-.427 1.605L9 13.125l.423 1.059a.956.956 0 01-1.652.928l-.679-.906a1.125 1.125 0 00-1.906.172L4.5 15.75l-.612.153M12.75 3.031a9 9 0 00-8.862 12.872M12.75 3.031a9 9 0 016.69 14.036m0 0l-.177-.529A2.25 2.25 0 0017.128 15H16.5l-.324-.324a1.453 1.453 0 00-2.328.377l-.036.073a1.586 1.586 0 01-.982.816l-.99.282c-.55.157-.894.702-.8 1.267l.073.438c.08.474.49.821.97.821.846 0 1.598.542 1.865 1.345l.215.643m5.276-3.67a9.012 9.012 0 01-5.276 3.67m0 0a9 9 0 01-10.275-4.835M15.75 9c0 .896-.393 1.7-1.016 2.25" />
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-theme-text">Welcome to Family Hub</h1>
      <p class="mt-2 text-theme-secondary">Sign in to your account</p>
    </div>

    <%# Login form card %>
    <div class="card p-8">
      <%= form_with url: login_path, method: :post, local: true, class: "space-y-6" do |f| %>
        <%# Email field %>
        <div>
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email,
              class: "input",
              placeholder: "you@example.com",
              autocomplete: "email",
              autofocus: true,
              required: true %>
        </div>

        <%# Password field with visibility toggle %>
        <div data-controller="password-visibility">
          <%= f.label :password, class: "label" %>
          <div class="relative">
            <%= f.password_field :password,
                class: "input pr-10",
                placeholder: "Enter your password",
                autocomplete: "current-password",
                required: true,
                data: { password_visibility_target: "input" } %>

            <div class="absolute inset-y-0 right-0 flex items-center">
              <button type="button"
                      data-action="click->password-visibility#toggle"
                      class="p-2 text-theme-secondary hover:text-theme-text transition-colors"
                      title="Toggle password visibility">
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-5 w-5"
                     fill="none"
                     viewBox="0 0 24 24"
                     stroke="currentColor"
                     data-password-visibility-target="showIcon">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-5 w-5 hidden"
                     fill="none"
                     viewBox="0 0 24 24"
                     stroke="currentColor"
                     data-password-visibility-target="hideIcon">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                </svg>
              </button>
            </div>
          </div>
        </div>

        <%# Forgot password link %>
        <div class="text-right">
          <%= link_to "Forgot password?", new_password_reset_path, class: "text-sm text-theme-secondary hover:text-theme-primary" %>
        </div>

        <%# Submit button %>
        <div>
          <%= f.submit "Sign in", class: "btn btn-primary w-full" %>
        </div>
      <% end %>
    </div>

    <%# Request access link %>
    <div class="mt-6 text-center">
      <p class="text-theme-secondary text-sm">
        Don't have an account?
        <%= link_to "Request Access", new_access_request_path, class: "text-theme-primary hover:underline font-medium" %>
      </p>
    </div>
  </div>
</div>
