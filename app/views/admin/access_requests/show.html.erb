<% content_for(:title) { "Review Request - Admin - Family Hub" } %>

<div class="max-w-2xl mx-auto px-4 py-8">
  <%# Back link %>
  <div class="mb-6">
    <%= link_to admin_access_requests_path, class: "text-theme-secondary hover:text-theme-text text-sm flex items-center gap-1" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to requests
    <% end %>
  </div>

  <h1 class="text-2xl font-bold text-theme-text mb-6">Review Access Request</h1>

  <%# Request details card %>
  <div class="card p-6 mb-6">
    <div class="flex items-start gap-4 mb-6">
      <div class="w-14 h-14 rounded-full flex items-center justify-center text-lg font-medium
                  <%= @access_request.pending? ? 'bg-yellow-100 text-yellow-700 dark:bg-yellow-900/30 dark:text-yellow-400' :
                      (@access_request.approved? ? 'bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400' :
                       'bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400') %>">
        <%= @access_request.first_name[0] %><%= @access_request.last_name[0] %>
      </div>
      <div>
        <h2 class="text-xl font-semibold text-theme-text"><%= @access_request.full_name %></h2>
        <p class="text-theme-secondary"><%= @access_request.email %></p>
        <% if @access_request.pending? %>
          <span class="badge bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400 mt-2">Pending Review</span>
        <% elsif @access_request.approved? %>
          <span class="badge bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400 mt-2">Approved</span>
        <% else %>
          <span class="badge bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400 mt-2">Denied</span>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4 border-t border-theme-border pt-6">
      <div>
        <p class="text-xs text-theme-secondary uppercase tracking-wider">Date of Birth</p>
        <p class="text-theme-text mt-1"><%= @access_request.date_of_birth.strftime("%B %d, %Y") %></p>
      </div>
      <div>
        <p class="text-xs text-theme-secondary uppercase tracking-wider">City</p>
        <p class="text-theme-text mt-1"><%= @access_request.city %></p>
      </div>
      <div>
        <p class="text-xs text-theme-secondary uppercase tracking-wider">Submitted</p>
        <p class="text-theme-text mt-1"><%= @access_request.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>
      <% if @access_request.reviewed_at %>
        <div>
          <p class="text-xs text-theme-secondary uppercase tracking-wider">Reviewed</p>
          <p class="text-theme-text mt-1">
            <%= @access_request.reviewed_at.strftime("%B %d, %Y at %I:%M %p") %>
            <% if @access_request.reviewed_by %>
              <br><span class="text-sm text-theme-secondary">by <%= @access_request.reviewed_by.full_name %></span>
            <% end %>
          </p>
        </div>
      <% end %>
    </div>
  </div>

  <% if @access_request.pending? %>
    <%# Approval form %>
    <div class="card p-6 mb-6">
      <h3 class="text-lg font-semibold text-theme-text mb-4">Approve Request</h3>
      <p class="text-sm text-theme-secondary mb-4">
        Approving this request will create a user account with a temporary password.
        The user will be required to change their password on first login.
      </p>

      <%= form_with url: approve_admin_access_request_path(@access_request), method: :post, local: true, class: "space-y-4" do |f| %>
        <div data-controller="password-visibility">
          <%= f.label :temporary_password, "Temporary Password", class: "label" %>
          <div class="flex gap-2">
            <div class="relative flex-1">
              <%= f.password_field :temporary_password,
                  class: "input pr-10",
                  placeholder: "Leave blank to auto-generate",
                  autocomplete: "off",
                  data: { password_visibility_target: "input" } %>

              <div class="absolute inset-y-0 right-0 flex items-center">
                <button type="button"
                        data-action="click->password-visibility#toggle"
                        class="p-2 text-theme-secondary hover:text-theme-text transition-colors"
                        title="Toggle password visibility">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" data-password-visibility-target="showIcon">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" data-password-visibility-target="hideIcon">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                  </svg>
                </button>
              </div>
            </div>
            <button type="button"
                    class="btn btn-secondary"
                    onclick="const input = this.closest('form').querySelector('input[name=temporary_password]'); input.value = '<%= User.generate_temporary_password %>'; input.type = 'text';">
              Generate
            </button>
          </div>
          <p class="text-xs text-theme-secondary mt-1">Must be at least 8 characters if provided.</p>
        </div>

        <%= f.submit "Approve & Create Account", class: "btn btn-primary" %>
      <% end %>
    </div>

    <%# Deny form %>
    <div class="card p-6">
      <h3 class="text-lg font-semibold text-theme-text mb-4">Deny Request</h3>
      <p class="text-sm text-theme-secondary mb-4">
        Denying this request will not create an account. The requester will be notified.
      </p>

      <button type="button"
              class="btn bg-red-600 hover:bg-red-700 text-white"
              onclick="document.getElementById('confirm-deny').querySelector('[data-controller=modal]').dispatchEvent(new CustomEvent('modal:open'))">
        Deny Request
      </button>
    </div>
  <% end %>
</div>

<%# Deny Confirmation Modal %>
<% if @access_request.pending? %>
  <div id="confirm-deny">
    <%= render "shared/confirm_dialog",
        id: "deny-modal",
        title: "Deny Access Request",
        message: "Are you sure you want to deny the access request from #{@access_request.full_name}? They will be notified that their request was not approved.",
        icon: "warning",
        confirm_text: "Deny Request",
        confirm_style: "danger",
        form_action: deny_admin_access_request_path(@access_request),
        form_method: :post %>
  </div>
<% end %>
