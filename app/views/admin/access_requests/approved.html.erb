<% content_for(:title) { "Request Approved - Admin - Family Hub" } %>

<div class="max-w-2xl mx-auto px-4 py-8">
  <%# Success message %>
  <div class="text-center mb-8">
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-100 dark:bg-green-900/30 mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
      </svg>
    </div>
    <h1 class="text-2xl font-bold text-theme-text">Request Approved!</h1>
    <p class="mt-2 text-theme-secondary">
      An account has been created for <strong><%= @access_request.full_name %></strong>
    </p>
  </div>

  <%# Account details card %>
  <div class="card p-6 mb-6">
    <h2 class="text-lg font-semibold text-theme-text mb-4">Account Details</h2>

    <div class="space-y-4">
      <div>
        <label class="label">Email</label>
        <div class="input bg-theme-background cursor-not-allowed"><%= @user.email %></div>
      </div>

      <%# Password field with visibility toggle and copy button %>
      <div data-controller="password-visibility">
        <label class="label">Temporary Password</label>
        <div class="relative">
          <input type="password"
                 value="<%= @temporary_password %>"
                 readonly
                 class="input pr-20 bg-theme-background font-mono"
                 data-password-visibility-target="input">

          <div class="absolute inset-y-0 right-0 flex items-center">
            <%# Copy button %>
            <button type="button"
                    data-action="click->password-visibility#copy"
                    class="p-2 text-theme-secondary hover:text-theme-text transition-colors"
                    title="Copy to clipboard">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
            </button>

            <%# Visibility toggle button %>
            <button type="button"
                    data-action="click->password-visibility#toggle"
                    class="p-2 text-theme-secondary hover:text-theme-text transition-colors"
                    title="Toggle password visibility">
              <svg xmlns="http://www.w3.org/2000/svg"
                   class="h-5 w-5"
                   fill="none"
                   viewBox="0 0 24 24"
                   stroke="currentColor"
                   data-password-visibility-target="showIcon">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              <svg xmlns="http://www.w3.org/2000/svg"
                   class="h-5 w-5 hidden"
                   fill="none"
                   viewBox="0 0 24 24"
                   stroke="currentColor"
                   data-password-visibility-target="hideIcon">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
              </svg>
            </button>
          </div>
        </div>
        <p class="text-xs text-theme-secondary mt-1">
          Share this password with the user. They will be required to change it on first login.
        </p>
      </div>
    </div>
  </div>

  <%# Next steps %>
  <div class="card p-6 mb-6 bg-blue-50 dark:bg-blue-900/20 border-blue-200 dark:border-blue-800">
    <h3 class="font-semibold text-theme-text mb-2">Next Steps</h3>
    <ol class="list-decimal list-inside text-sm text-theme-secondary space-y-1">
      <li>Share the temporary password with <%= @access_request.first_name %></li>
      <li>They can log in at <%= link_to login_url, login_url, class: "text-theme-primary hover:underline" %></li>
      <li>They will be prompted to set a new password on first login</li>
    </ol>
  </div>

  <%# Actions %>
  <div class="flex gap-3">
    <%= link_to admin_access_requests_path, class: "btn btn-secondary flex-1 justify-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Requests
    <% end %>
    <%= link_to admin_user_path(@user), class: "btn btn-primary flex-1 justify-center" do %>
      View User Profile
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    <% end %>
  </div>
</div>
