<% content_for(:title) { "Admin Dashboard - Family Hub" } %>
<% content_for(:page_title) { "Dashboard" } %>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <%# Pending requests card %>
  <%= link_to admin_access_requests_path, class: "card p-6 hover:shadow-theme-md transition-shadow" do %>
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-theme-secondary">Pending Requests</p>
        <p class="text-3xl font-bold text-theme-text mt-1"><%= @pending_requests_count %></p>
      </div>
      <div class="w-12 h-12 rounded-card bg-warning-50 flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-warning-600" viewBox="0 0 20 20" fill="currentColor">
          <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
        </svg>
      </div>
    </div>
  <% end %>

  <%# Active users card %>
  <%= link_to admin_users_path, class: "card p-6 hover:shadow-theme-md transition-shadow" do %>
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-theme-secondary">Active Users</p>
        <p class="text-3xl font-bold text-theme-text mt-1"><%= @active_users_count %></p>
      </div>
      <div class="w-12 h-12 rounded-card bg-success-50 flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-success-600" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
        </svg>
      </div>
    </div>
  <% end %>

  <%# Total users card %>
  <div class="card p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-theme-secondary">Total Users</p>
        <p class="text-3xl font-bold text-theme-text mt-1"><%= @total_users_count %></p>
      </div>
      <div class="w-12 h-12 rounded-card bg-theme-primary-light flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-theme-primary" viewBox="0 0 20 20" fill="currentColor">
          <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
        </svg>
      </div>
    </div>
  </div>
</div>

<%# Quick actions %>
<div class="card p-6">
  <h2 class="text-lg font-semibold text-theme-text mb-4">Quick Actions</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <%= link_to admin_access_requests_path, class: "p-4 border border-theme rounded-card hover:bg-theme-surface transition-colors flex items-center gap-3" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-theme-secondary" viewBox="0 0 20 20" fill="currentColor">
        <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
      </svg>
      <span class="text-sm font-medium text-theme-text">Review Requests</span>
    <% end %>

    <%= link_to admin_users_path, class: "p-4 border border-theme rounded-card hover:bg-theme-surface transition-colors flex items-center gap-3" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-theme-secondary" viewBox="0 0 20 20" fill="currentColor">
        <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
      </svg>
      <span class="text-sm font-medium text-theme-text">Manage Users</span>
    <% end %>

    <%= link_to admin_themes_path, class: "p-4 border border-theme rounded-card hover:bg-theme-surface transition-colors flex items-center gap-3" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-theme-secondary" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4 2a2 2 0 00-2 2v11a3 3 0 106 0V4a2 2 0 00-2-2H4zm1 14a1 1 0 100-2 1 1 0 000 2zm5-1.757l4.9-4.9a2 2 0 000-2.828L13.485 5.1a2 2 0 00-2.828 0L10 5.757v8.486zM16 18H9.071l6-6H16a2 2 0 012 2v2a2 2 0 01-2 2z" clip-rule="evenodd" />
      </svg>
      <span class="text-sm font-medium text-theme-text">Manage Themes</span>
    <% end %>

    <%= link_to admin_analytics_path, class: "p-4 border border-theme rounded-card hover:bg-theme-surface transition-colors flex items-center gap-3" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-theme-secondary" viewBox="0 0 20 20" fill="currentColor">
        <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z" />
      </svg>
      <span class="text-sm font-medium text-theme-text">View Analytics</span>
    <% end %>
  </div>
</div>
