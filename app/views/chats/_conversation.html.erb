<%# Conversation partial - displays the active chat conversation %>
<%# locals: chat, messages, current_user %>

<%# Subscribe to Turbo Streams for this chat (per-user channel for correct message alignment) %>
<%= turbo_stream_from chat, current_user %>

<div class="h-full flex flex-col"
     data-controller="chat lightbox"
     data-chat-chat-id-value="<%= chat.id %>"
     data-chat-current-user-id-value="<%= current_user.id %>">

  <%# Lightbox overlay for viewing images %>
  <div data-lightbox-target="overlay"
       data-action="click->lightbox#close"
       class="hidden fixed inset-0 z-50 bg-black/90 items-center justify-center opacity-0 transition-opacity duration-300">
    <%# Close button %>
    <button type="button"
            data-action="click->lightbox#close"
            class="absolute top-4 right-4 p-2 text-white/70 hover:text-white rounded-lg hover:bg-white/10 transition-colors z-10">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <%# Navigation arrows %>
    <button type="button"
            data-action="click->lightbox#previous"
            class="absolute left-4 top-1/2 -translate-y-1/2 p-3 text-white/70 hover:text-white rounded-full hover:bg-white/10 transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>
    <button type="button"
            data-action="click->lightbox#next"
            class="absolute right-4 top-1/2 -translate-y-1/2 p-3 text-white/70 hover:text-white rounded-full hover:bg-white/10 transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </button>

    <%# Image container %>
    <div class="max-w-[90vw] max-h-[85vh] flex flex-col items-center" data-action="click->lightbox#close:stop">
      <img data-lightbox-target="image"
           class="max-w-full max-h-[80vh] object-contain rounded-lg scale-95 transition-transform duration-300"
           alt="Full size image">

      <%# Image info %>
      <div class="mt-4 text-center text-white">
        <span data-lightbox-target="counter" class="text-sm opacity-70"></span>
        <p data-lightbox-target="caption" class="text-sm mt-1 opacity-70"></p>
      </div>
    </div>
  </div>

  <!-- Chat header -->
  <div class="flex-shrink-0 bg-theme-surface border-b border-theme-border px-4 py-3">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <% if chat.direct? %>
          <% other = chat.other_member(current_user) %>
          <% if other&.avatar&.attached? %>
            <%= image_tag other.avatar, class: "w-10 h-10 rounded-full object-cover" %>
          <% else %>
            <div class="w-10 h-10 rounded-full bg-theme-primary/20 flex items-center justify-center">
              <span class="text-theme-primary font-medium"><%= other&.initials || '?' %></span>
            </div>
          <% end %>
        <% else %>
          <div class="w-10 h-10 rounded-[15px] bg-theme-primary/20 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-theme-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
        <% end %>

        <div>
          <h1 class="font-semibold text-theme-text"><%= chat.display_name(current_user) %></h1>
          <% if chat.group? %>
            <p class="text-xs text-theme-secondary"><%= chat.members.count %> members</p>
          <% elsif chat.direct? %>
            <p class="text-xs text-theme-secondary">Direct message</p>
          <% else %>
            <p class="text-xs text-theme-secondary">Public channel</p>
          <% end %>
        </div>
      </div>

      <% if chat.group? %>
        <%= link_to edit_chat_path(chat), class: "p-2 text-theme-secondary hover:text-theme-text hover:bg-theme-background rounded-lg transition-colors", data: { turbo_frame: "_top" } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Messages area -->
  <div class="flex-1 overflow-y-auto" data-chat-target="messages">
    <div class="px-4 py-4 space-y-4">
      <div id="messages">
        <% if messages.empty? %>
          <div class="text-center py-12 text-theme-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-4 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            <p>No messages yet. Start the conversation!</p>
          </div>
        <% else %>
          <%= render partial: 'messages/message', collection: messages, as: :message, locals: { current_user: current_user } %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Message input area -->
  <div class="flex-shrink-0 bg-theme-surface border-t border-theme-border">
    <!-- Typing indicator (inline above input) -->
    <div class="hidden px-4 pt-2" data-chat-target="typingIndicator">
      <div class="flex items-center gap-1.5 text-xs text-theme-secondary">
        <div class="typing-indicator inline-flex">
          <span></span>
          <span></span>
          <span></span>
        </div>
        <span class="typing-text"></span>
      </div>
    </div>

    <!-- Reply indicator (with message preview) -->
    <div class="hidden px-4 py-2 border-b border-theme-border" data-chat-target="replyIndicator">
      <div class="flex items-start gap-3">
        <%# Reply preview (Google Messages style) %>
        <div class="flex-1 flex rounded-lg overflow-hidden bg-theme-surface min-w-0">
          <div class="w-1 flex-shrink-0 bg-theme-primary"></div>
          <div class="flex-1 px-3 py-2 min-w-0">
            <p class="text-xs font-medium text-theme-primary mb-0.5" data-chat-target="replyAuthor"></p>
            <p class="text-xs text-theme-secondary truncate" data-chat-target="replyContent"></p>
          </div>
        </div>

        <%# Close button %>
        <button type="button"
                data-action="click->chat#cancelReply"
                class="flex-shrink-0 p-1 text-theme-secondary hover:text-theme-text hover:bg-theme-surface rounded transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <div class="p-4">
      <%= render 'message_form', chat: chat, message: Message.new %>
    </div>
  </div>
</div>
