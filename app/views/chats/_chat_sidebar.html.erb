<%# Chat sidebar - shows list of all chats %>
<%# locals: chats, current_user, active_chat_id (optional) %>

<% active_chat_id ||= nil %>

<div class="flex flex-col h-full">
  <%# Header %>
  <div class="flex-shrink-0 p-4 border-b border-theme-border">
    <div class="flex items-center justify-between">
      <h1 class="text-xl font-bold text-theme-text">Chats</h1>
      <%= link_to new_chat_path,
          class: "p-2 text-theme-primary hover:bg-theme-primary/10 rounded-lg transition-colors",
          title: "New Chat",
          data: { turbo_frame: "chat_conversation" } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
  </div>

  <%# Chat list %>
  <div class="flex-1 overflow-y-auto p-2">
    <% if chats.any? %>
      <div class="space-y-1">
        <% chats.each do |chat| %>
          <%= render 'chats/chat_list_item',
              chat: chat,
              current_user: current_user,
              active: chat.id == active_chat_id %>
        <% end %>
      </div>
    <% else %>
      <div class="p-4 text-center text-theme-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-3 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        <p class="text-sm mb-2">No conversations yet</p>
        <%= link_to "Start a chat", new_chat_path,
            class: "text-sm text-theme-primary hover:underline",
            data: { turbo_frame: "chat_conversation" } %>
      </div>
    <% end %>
  </div>
</div>
