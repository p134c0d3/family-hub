<% content_for(:title) { "Dashboard - Family Hub" } %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%# Welcome header %>
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-theme-text">
      Welcome back, <%= current_user.first_name %>!
    </h1>
    <p class="mt-1 text-theme-secondary">
      Here's what's happening with your family.
    </p>
  </div>

  <%# Dashboard grid %>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Recent chats section %>
    <div class="lg:col-span-1">
      <div class="card p-6 h-80 flex flex-col"
           data-controller="chat-list"
           data-chat-list-current-user-id-value="<%= current_user.id %>">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-theme-text">Recent Chats</h2>
          <%= link_to chats_path, class: "text-sm text-theme-primary hover:underline" do %>
            View all
          <% end %>
        </div>

        <div class="flex-1 overflow-y-auto overflow-x-hidden space-y-1">
          <% if @recent_chats.any? %>
            <% @recent_chats.each do |chat| %>
              <%= link_to chat_path(chat), class: "flex items-center gap-3 p-2 -mx-2 rounded-lg hover:bg-theme-background transition-colors", data: { chat_list_target: "chatItem", chat_id: chat.id } do %>
                <% # Avatar %>
                <% if chat.direct? %>
                  <% other = chat.other_member(current_user) %>
                  <% if other&.avatar&.attached? %>
                    <%= image_tag other.avatar, class: "w-10 h-10 rounded-full object-cover flex-shrink-0" %>
                  <% else %>
                    <div class="w-10 h-10 rounded-full bg-theme-primary/20 flex items-center justify-center flex-shrink-0">
                      <span class="text-theme-primary text-sm font-medium"><%= other&.initials || '?' %></span>
                    </div>
                  <% end %>
                <% else %>
                  <div class="w-10 h-10 rounded-[12px] bg-theme-primary/20 flex items-center justify-center flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-theme-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                  </div>
                <% end %>

                <% # Chat info %>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between">
                    <span class="font-medium text-theme-text text-sm truncate"><%= chat.display_name(current_user) %></span>
                    <% if chat.last_message %>
                      <span class="text-xs text-theme-secondary flex-shrink-0 ml-2"><%= time_ago_in_words(chat.last_message.created_at) %></span>
                    <% end %>
                  </div>

                  <% # Last message preview (shown normally) %>
                  <div data-chat-preview>
                    <% if chat.last_message %>
                      <p class="text-sm text-theme-secondary truncate">
                        <% if chat.last_message.deleted? %>
                          <span class="italic">Message deleted</span>
                        <% else %>
                          <%= chat.last_message.user == current_user ? "You: " : "" %><%= truncate(chat.last_message.content, length: 30) %>
                        <% end %>
                      </p>
                    <% else %>
                      <p class="text-sm text-theme-secondary italic">No messages yet</p>
                    <% end %>
                  </div>

                  <% # Typing indicator (shown when someone is typing) %>
                  <div data-chat-typing class="hidden">
                    <p class="text-sm text-theme-primary flex items-center gap-1.5">
                      <span class="typing-indicator">
                        <span></span>
                        <span></span>
                        <span></span>
                      </span>
                      <span class="typing-text"></span>
                    </p>
                  </div>
                </div>

                <% # Unread badge %>
                <% unread = chat.unread_count_for(current_user) %>
                <% if unread > 0 %>
                  <span class="unread-badge"><%= unread > 99 ? '99+' : unread %></span>
                <% end %>
              <% end %>
            <% end %>
          <% else %>
            <div class="text-center py-8 text-theme-secondary">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-3 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
              <p class="text-sm">No recent chats</p>
              <%= link_to "Start a conversation", new_chat_path, class: "text-sm text-theme-primary hover:underline" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <%# Calendar section %>
    <div class="lg:col-span-1">
      <div class="card p-6 h-80 flex flex-col">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-theme-text">Upcoming Events</h2>
          <%= link_to calendar_path, class: "text-sm text-theme-primary hover:underline" do %>
            View calendar
          <% end %>
        </div>

        <div class="flex-1 overflow-y-auto">
          <%# Placeholder for events %>
          <div class="text-center py-8 text-theme-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-3 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <p class="text-sm">No upcoming events</p>
            <%= link_to "Create an event", new_event_path, class: "text-sm text-theme-primary hover:underline" %>
          </div>
        </div>
      </div>
    </div>

    <%# Gallery section %>
    <div class="lg:col-span-1">
      <div class="card p-6 h-80 flex flex-col">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-theme-text">Recent Photos</h2>
          <%= link_to gallery_path, class: "text-sm text-theme-primary hover:underline" do %>
            View gallery
          <% end %>
        </div>

        <div class="flex-1 overflow-y-auto">
          <%# Placeholder for gallery items %>
          <div class="text-center py-8 text-theme-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-3 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <p class="text-sm">No photos yet</p>
            <%= link_to "Upload photos", new_media_item_path, class: "text-sm text-theme-primary hover:underline" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Quick actions %>
  <div class="mt-8">
    <h2 class="text-lg font-semibold text-theme-text mb-4">Quick Actions</h2>
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
      <%= link_to new_chat_path, class: "card p-4 flex flex-col items-center text-center hover:shadow-theme-md transition-shadow" do %>
        <div class="w-12 h-12 rounded-card bg-theme-primary-light flex items-center justify-center mb-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-theme-primary" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd" />
          </svg>
        </div>
        <span class="text-sm font-medium text-theme-text">New Chat</span>
      <% end %>

      <%= link_to new_event_path, class: "card p-4 flex flex-col items-center text-center hover:shadow-theme-md transition-shadow" do %>
        <div class="w-12 h-12 rounded-card bg-accent-100 flex items-center justify-center mb-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent-600" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
          </svg>
        </div>
        <span class="text-sm font-medium text-theme-text">New Event</span>
      <% end %>

      <%= link_to new_media_item_path, class: "card p-4 flex flex-col items-center text-center hover:shadow-theme-md transition-shadow" do %>
        <div class="w-12 h-12 rounded-card bg-success-50 flex items-center justify-center mb-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-success-600" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
          </svg>
        </div>
        <span class="text-sm font-medium text-theme-text">Upload Photo</span>
      <% end %>

      <%= link_to new_album_path, class: "card p-4 flex flex-col items-center text-center hover:shadow-theme-md transition-shadow" do %>
        <div class="w-12 h-12 rounded-card bg-warning-50 flex items-center justify-center mb-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-warning-600" viewBox="0 0 20 20" fill="currentColor">
            <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" />
          </svg>
        </div>
        <span class="text-sm font-medium text-theme-text">New Album</span>
      <% end %>
    </div>
  </div>
</div>
