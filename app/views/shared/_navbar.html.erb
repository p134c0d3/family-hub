          <span>Family Hub</span>
        <% end %>

        <%# Main navigation %>
        <div class="hidden md:flex items-center gap-1">
          <%= link_to dashboard_path, class: "nav-link #{current_page?(dashboard_path) ? 'nav-link-active' : ''}" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
            </svg>
            <span>Home</span>
          <% end %>

          <%= link_to chats_path, class: "nav-link #{controller_name == 'chats' || controller_name == 'messages' ? 'nav-link-active' : ''}" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd" />
            </svg>
            <span>Chat</span>
            <% if defined?(unread_message_count) && unread_message_count > 0 %>
              <span class="unread-badge"><%= unread_message_count > 99 ? '99+' : unread_message_count %></span>
            <% end %>
          <% end %>

          <%= link_to calendar_path, class: "nav-link #{controller_name == 'calendar' || controller_name == 'events' ? 'nav-link-active' : ''}" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
            </svg>
            <span>Calendar</span>
          <% end %>

          <%= link_to gallery_path, class: "nav-link #{controller_name == 'gallery' || controller_name == 'albums' || controller_name == 'media_items' ? 'nav-link-active' : ''}" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
            </svg>
            <span>Gallery</span>
          <% end %>
        </div>
      </div>

      <%# Right side: Theme toggle + User menu %>
      <div class="flex items-center gap-4">
        <%# Theme toggle button %>
        <button
          type="button"
          class="btn-ghost p-2 rounded-button"
          data-action="click->theme#toggle"
          title="Toggle dark mode"
        >
          <%# Sun icon (shown in dark mode) %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden dark:block" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
          </svg>
          <%# Moon icon (shown in light mode) %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 block dark:hidden" viewBox="0 0 20 20" fill="currentColor">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
          </svg>
        </button>

        <%# User dropdown %>
        <div class="relative" data-controller="dropdown">
          <button
            type="button"
            class="flex items-center gap-2 p-1.5 rounded-button hover:bg-theme-surface transition-colors"
            data-action="click->dropdown#toggle"
            data-dropdown-target="button"
          >
            <div class="avatar avatar-sm">
              <% if current_user.avatar.attached? %>
                <%= image_tag current_user.avatar, alt: current_user.full_name %>
              <% else %>
                <%= current_user.initials %>
              <% end %>
            </div>
            <span class="hidden sm:block text-sm font-medium text-theme-text"><%= current_user.first_name %></span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-theme-secondary" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>

          <%# Dropdown menu %>
          <div
            class="dropdown-menu absolute right-0 mt-2 w-56 hidden"
            data-dropdown-target="menu"
          >
            <div class="px-4 py-3 border-b border-theme">
              <p class="text-sm font-medium text-theme-text"><%= current_user.full_name %></p>
              <p class="text-xs text-theme-secondary truncate"><%= current_user.email %></p>
            </div>

            <%= link_to profile_path, class: "dropdown-item" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-3 text-theme-secondary" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
              </svg>
              My Profile
            <% end %>

            <%= link_to settings_path, class: "dropdown-item" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-3 text-theme-secondary" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
              </svg>
              Settings
            <% end %>

            <% if current_user.admin? %>
              <div class="dropdown-divider"></div>

