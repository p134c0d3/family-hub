<%# Notification bell with dropdown and real-time updates %>
<div class="relative" data-controller="notification">
  <%# Bell button %>
  <button
    type="button"
    class="btn-ghost p-2 rounded-button relative"
    data-action="click->notification#toggleDropdown"
    title="Notifications"
  >
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
      <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z" />
    </svg>

    <%# Unread badge %>
    <span
      class="absolute -top-0.5 -right-0.5 min-w-[18px] h-[18px] flex items-center justify-center text-[10px] font-bold text-white bg-red-500 rounded-full px-1 hidden"
      data-notification-target="badge"
    >
      0
    </span>
  </button>

  <%# Dropdown menu %>
  <div
    class="dropdown-menu absolute right-0 mt-2 w-80 max-h-[70vh] overflow-hidden hidden"
    data-notification-target="dropdown"
  >
    <%# Header %>
    <div class="flex items-center justify-between px-4 py-3 border-b border-theme">
      <h3 class="text-sm font-semibold text-theme-text">Notifications</h3>
      <button
        type="button"
        class="text-xs text-theme-primary hover:underline"
        data-action="click->notification#markAllRead"
      >
        Mark all read
      </button>
    </div>

    <%# Notifications list %>
    <div class="overflow-y-auto max-h-[calc(70vh-60px)]">
      <div data-notification-target="list">
        <%# Notifications will be loaded via JavaScript %>
      </div>

      <%# Empty state %>
      <div class="px-4 py-8 text-center hidden" data-notification-target="emptyState">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-theme-text-muted mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
        </svg>
        <p class="text-sm text-theme-text-muted">No notifications yet</p>
        <p class="text-xs text-theme-text-muted mt-1">You'll see notifications here when someone mentions you or replies to your messages</p>
      </div>
    </div>
  </div>

  <%# Toast notification (for new notifications) %>
  <div
    class="fixed bottom-4 right-4 z-50 max-w-sm bg-theme-surface-elevated rounded-lg shadow-lg border border-theme p-4 hidden transform translate-y-full opacity-0 transition-all duration-300"
    data-notification-target="toast"
  >
    <div class="flex items-start gap-3">
      <div class="flex-shrink-0">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-theme-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
        </svg>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-theme-text" data-notification-target="toastMessage">
          New notification
        </p>
      </div>
      <button
        type="button"
        class="flex-shrink-0 text-theme-text-muted hover:text-theme-text"
        data-action="click->notification#dismissToast"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>
  </div>
</div>
