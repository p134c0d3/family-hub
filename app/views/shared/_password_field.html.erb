<%#
  Password field with visibility toggle

  Required locals:
    - form: the form builder (f)
    - field_name: symbol for the field (e.g., :password)

  Optional locals:
    - label: custom label text (defaults to humanized field name)
    - placeholder: placeholder text
    - autocomplete: autocomplete attribute value
    - required: whether field is required (default: true)
    - hint: hint text below field
    - show_copy: show copy button (default: false)
    - readonly: make field readonly (default: false)
    - value: preset value for the field
%>
<% label ||= field_name.to_s.humanize %>
<% placeholder ||= nil %>
<% autocomplete ||= "off" %>
<% required = true if local_assigns[:required].nil? %>
<% hint ||= nil %>
<% show_copy ||= false %>
<% readonly ||= false %>
<% value ||= nil %>

<div data-controller="password-visibility">
  <%= form.label field_name, label, class: "label" %>
  <div class="relative">
    <%= form.password_field field_name,
        class: "input pr-#{show_copy ? '20' : '10'}",
        placeholder: placeholder,
        autocomplete: autocomplete,
        required: required,
        readonly: readonly,
        value: value,
        data: { password_visibility_target: "input" } %>

    <div class="absolute inset-y-0 right-0 flex items-center">
      <% if show_copy %>
        <%# Copy button %>
        <button type="button"
                data-action="click->password-visibility#copy"
                class="p-2 text-theme-secondary hover:text-theme-text transition-colors"
                title="Copy to clipboard">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
        </button>
      <% end %>

      <%# Visibility toggle button %>
      <button type="button"
              data-action="click->password-visibility#toggle"
              class="p-2 text-theme-secondary hover:text-theme-text transition-colors"
              title="Toggle password visibility">
        <%# Eye icon (show when password is hidden) %>
        <svg xmlns="http://www.w3.org/2000/svg"
             class="h-5 w-5"
             fill="none"
             viewBox="0 0 24 24"
             stroke="currentColor"
             data-password-visibility-target="showIcon">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
        <%# Eye-off icon (show when password is visible) %>
        <svg xmlns="http://www.w3.org/2000/svg"
             class="h-5 w-5 hidden"
             fill="none"
             viewBox="0 0 24 24"
             stroke="currentColor"
             data-password-visibility-target="hideIcon">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
        </svg>
      </button>
    </div>
  </div>
  <% if hint %>
    <p class="text-xs text-theme-secondary mt-1"><%= hint %></p>
  <% end %>
</div>
